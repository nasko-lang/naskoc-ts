{
	"compilerOptions": {
		"target": "es2020",
		"module": "CommonJS",
		"lib": ["es2020"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"tests",
		"node_modules",
		"build"
	]
}
